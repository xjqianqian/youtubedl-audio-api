# Server Configuration
PORT=5000                           # Optional: Port to run the server on (default: 5000)
WORKERS=2                           # Optional: Number of Gunicorn workers (default: 2 * Cores + 1)

# Logging Configuration
LOGGING_LEVEL=INFO                  # Optional: CRITICAL, FATAL, ERROR, WARNING, WARN, INFO, DEBUG, NOTSET (default: DEBUG if in debug mode, WARN otherwise)

# Cache Configuration
# REDIS_URL=redis://localhost:6379    # Optional: Redis connection URL (can also use REDIS instead)
# REDIS=redis://localhost:6379      # Alternative to REDIS_URL

# Proxy Configuration
PROXY=https://127.0.0.1:7897      # Optional: Main proxy server URL (supports http, https, socks5)
FALLBACK_PROXY=http://127.0.0.1:7897 # Optional: Backup proxy server to use if main proxy fails

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173  # Optional: Comma-separated list of allowed origins (default: *)

# JSON Formatting
JSONIFY_PRETTYPRINT_REGULAR=true   # Optional: Enable pretty-printed JSON responses (default: false) 